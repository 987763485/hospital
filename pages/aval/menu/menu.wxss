.index-menu{
  margin: 10rpx 8rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: space-around;
}
.menu-item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; 
  border: 6rpx solid #f5f5f9;
  width: 50%; 
  height: 150rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.menu-img{
  width: 84rpx;
  height: 84rpx;  
}
.meun-text{
  display: flex; 
  flex-direction: column;  
  align-items: center;
  padding: 0 20rpx;
}
.menu-title{
  color: #525252;
  font-size: 14px;
}
.menu-dec{
  color: #838895;
  padding-top: 10rpx;
  font-size: 10px;
}
button{
  border-radius: 0;
  line-height: inherit;  
}
button::after{
border:none;
}