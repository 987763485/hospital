/* pages/creat/creat.wxss */
@import '../aval/base.wxss';
.creat-box{
  font-size: 32rpx;
}
.creat-box-item{
  width: 100%;

}
.info{
  display: flex;
  width: 100%;  
  box-sizing: border-box;
  /* padding: 20rpx;   */
}
.info-item{  
  display: flex;  
  box-sizing: border-box; 
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  margin-left: 20rpx;
  border-top: 1px solid #e5e5e5;
}
.nobordertop{
  border-top: 0px solid #fff;
}
.info-item label{
  flex: none;  
}
.info-item input{ 
  flex: 1;  
  margin-left: 40rpx;
  box-sizing: border-box;
  padding-left: 20rpx; 
  height: 60rpx;
  line-height: 60rpx;
}
.product{
  background-color: #fff;
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;  
}
.product-img{
  width: 200rpx;
  height: 200rpx;
}
.product-de{
  /* height: 240rpx; */
  font-size: 32rpx;
  padding: 0rpx 10rpx 0rpx 30rpx;
}
.price-nm{
  display: inline-block;
  color: #ee2174;
  font-size: 28rpx;
}
.price{
  font-size: 28rpx;
  position: relative;
  text-align: right; 
}
.warp{
  position: fixed;
  bottom: 0px;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background-color: #fafafa;
  font-size: 32rpx;
}
.warp-de{
  padding-right: 40rpx;
}
.warp-button{
  background-color: #ee2174;
  color: #fff;
  width: 260rpx;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
}
.bor{
  background-color: #f9f9f9;
}
.info-item switch{
  position:absolute;
  right: 20rpx; 
}
picker{
  position: relative;
  flex: 1;    
  box-sizing: border-box;
  padding-left: 20rpx; 
  height: 60rpx;
  line-height: 60rpx;
}
.picker{
  padding-left: 40rpx;
}
.choise{
  position: absolute;
  right: 20rpx;
  top:10rpx;
  width: 40rpx;
  height: 40rpx;
}