/* pages/order/order.wxss */
@import '../aval/base.wxss';
page{
  background-color: #f5f5f5;  
}
.order-top{  
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  width: 100%;
  height: 90rpx; 
  box-sizing: border-box;
  border: 3rpx solid e5e5e5;
  background-color: #fff;  
}
.order-top-item{
   position: relative;
   flex: 1;
   display: flex;
   align-items: center;
   justify-content: center;
    height: 90rpx;    
}
.select::after{
  position: absolute;
  left: 0rpx;
   margin-left: 30rpx;  
  bottom: 0rpx; 
  display: block;
  content: "";
  width: 120rpx;
  height: 2rpx;
  background-color: #ee2174;  
}
.order-box{
  border-color: #f5f5f5;
}
.order-item{
  background-color: #fff;
  margin-top: 40rpx;
  padding-bottom: 10rpx;
}
.product{
  background-color: #fff;
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 10rpx 10rpx 16rpx 10rpx;  
}
.product-img{
  width: 200rpx;
  height: 200rpx;
}
.product-de{
  /* height: 240rpx; */
  font-size: 32rpx;
  padding: 0rpx 10rpx 0rpx 30rpx;
}
.price-nm{
  display: inline-block;  
  font-size: 28rpx;
}
.price{
  font-size: 28rpx;
  position: relative;
  text-align: right; 
}
.item-bottom{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100rpx;
  border-top: 1px solid #e5e5e5;
}
.item-button{
  display: flex;
  align-items: center;
  justify-content: center;  
  font-size: 28rpx;
  box-sizing: border-box;
  border:1px solid #e5e5e5;
  padding: 4rpx 20rpx;
   margin: 0 20rpx; 
}
.item-top{
  display: flex;
  font-size: 28rpx;
  padding: 30rpx;  
}
.item-nm{
  flex: 1;
}
.item-start{
  color: #ee2174;
  flex: none;
}
.dust{
  color: #b7b7b7;
}
.red{
  color: #ee2174;
  border-color: #ee2174;
}