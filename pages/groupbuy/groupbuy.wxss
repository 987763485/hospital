/* pages/groupbuy/groupbuy.wxss */
@import '../aval/base.wxss';
.groupbuy-box{
  margin-top: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
  padding: 4rpx 8rpx;  
}
.group-item{
  display: flex;
  flex-direction: column;
  width: 50%;  
  box-sizing: border-box;
  padding:20rpx 8rpx; 
}
.group-item-img{
  height: 350rpx;
}
.group-time{
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  height: 40rpx;
  width: 100%;
  font-size: 24rpx;
  color: #eb100a;
  text-align: center;
}
.group-item-de{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.group-item-title{
  font-size: 28rpx;  
}
.group-item-nu{
  font-size: 24rpx;
   color: #a7a7a7; 
}
.group-item-de-left{
   flex: 1;  
  padding: 10rpx;
}
.group-item-de-right{
  flex: 1;  
  display: flex; 
}
.group-button{
  background-color: #ee2174;
  color: #fff;
  border: 1px solid #ee2174;
  text-align: center;
  font-size: 28rpx;
  border-radius: 4rpx;
  padding: 4rpx 8rpx;
}
.search{
position: fixed;
 width: 100%;
 height: 120rpx;
 background-color: #f5f5f5;
 display: flex;
 align-items: center;
 justify-content: center;
 z-index: 10; 
}
.search input{
  width: 90%;
  height: 60rpx;
  border: 1px solid #fff;
  border-radius: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 58rpx; 
}
.search icon{
  position: absolute;
  left: 58rpx;
  z-index: 10;
}